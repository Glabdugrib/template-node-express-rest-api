#!/bin/sh
set -e

# Colori ANSI
GREEN='\033[0;32m'
CYAN='\033[0;36m'
RESET='\033[0m'

printf "\n${CYAN}Linting staged files...${RESET}\n"
pnpm exec lint-staged

printf "\n${CYAN}Type-checking project...${RESET}\n"
pnpm exec tsc --noEmit

# Uncomment if you want staged tests
# printf "\n${CYAN}Running tests on staged files...${RESET}\n"
# pnpm test:staged

printf "\n${GREEN}âœ… Pre-commit checks passed!${RESET}\n\n"
